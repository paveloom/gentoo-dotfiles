" Enable mouse support
set mouse=a

" Enable undo persistence
set undodir=~/.vim/undodir
set undofile

" Allow the Left/Right keys to move the cursor to the previous/next line
set whichwrap+=<,>

" Set the alternative keymap
set keymap=russian-jcukenwin
set iminsert=0
set imsearch=0

" Wrap long lines at a character in 'breakat'
set linebreak

" Ignore case in search patterns
set ignorecase
